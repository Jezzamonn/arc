{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "webpack": "src/js/**",
    "html": {
      "patterns": [
        "src/index.html",
        "script/makehtml.js"
      ],
      "extensions": "html,js"
    },
    "css": {
      "patterns": [
        "src/css/**"
      ],
      "extensions": "css"
    }
  },
  "scripts": {
    "start": "http-server",
    "reload": "reload -b -d build/web",
    "build": "npm-run-all --parallel webpack html css",
    "webpack": "webpack || exit 1",
    "html": "node script/makehtml.js --title='{{title}}' --path={{path}}",
    "css": "mkdir -p build/web/css/ && rsync -a --delete src/css/ build/web/css/",
    "clean": "rm -rf build/*",
    "watch": "npm-watch",
    "gif": "script/gif-gen.sh",
    "video": "script/video-gen.sh",
    "preview": "node build/save-frames.bundle.js --width=1200 --height=630 --single_frame --out=preview.png"
  },
  "husky": {
    "hooks": {
      "post-commit": "script/video-preview.sh >/dev/null & "
    }
  },
  "author": "Jezzamon",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "babel-loader": "^8.2.2",
    "canvas": "^2.6.1",
    "command-line-args": "^5.1.1",
    "http-server": "^0.12.3",
    "husky": "^4.3.8",
    "mkdirp": "^1.0.4",
    "mustache": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.7.0",
    "pretty-ms": "^7.0.1",
    "reload": "^3.1.1",
    "single-line-log": "^1.1.2",
    "webpack": "^5.21.1",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {}
}
